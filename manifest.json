{
  "manifest_version": 3,
  "name": "Dayflow",
  "version": "1.0.0",
  "description": "Your day at a glance â€” current task, what's next, and how far you've come.",

  "action": {
    "default_popup": "popup.html",
    "default_title": "Dayflow",
    "default_icon": {
      "16":  "icons/icon16.png",
      "32":  "icons/icon32.png",
      "48":  "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "identity",
    "storage",
    "alarms",
    "notifications"
  ],

  "oauth2": {
    "client_id": "989279528565-a9vtd632h3ak6uk963lmudcft4jab5gq.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events.readonly"
    ]
  },

  "host_permissions": [
    "https://www.googleapis.com/*"
  ],

  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}